# FightSight Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
BUILD_TARGET=development
LOG_LEVEL=info

# Database
POSTGRES_PASSWORD=dev_password_change_in_prod
DATABASE_URL=postgresql://fightsight:dev_password_change_in_prod@localhost:5432/fightsight

# Redis
REDIS_URL=redis://localhost:6379

# Services
CV_SERVICE_URL=http://localhost:8001

# API Configuration
PORT=3000
API_BASE_URL=http://localhost:3000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LLM Configuration (defaults)
PRIMARY_LLM_PROVIDER=anthropic
LLM_MODEL_CLAUDE=claude-3-5-sonnet-20241022
LLM_MODEL_GPT=gpt-4-vision-preview
LLM_MODEL_GEMINI=gemini-1.5-flash

# Video Processing
MAX_VIDEO_SIZE_MB=500
MAX_VIDEO_DURATION_SECONDS=360
FRAME_SAMPLING_RATE=2
MAX_CONCURRENT_LLM_CALLS=10

# Storage (local for dev, cloud for prod)
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# AWS S3 (if using cloud storage)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=fightsight-videos
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Job Queue
QUEUE_CONCURRENCY=5
JOB_TIMEOUT_MS=1800000

# Development Tools
PGADMIN_EMAIL=admin@fightsight.local
PGADMIN_PASSWORD=admin

# Security (generate strong secrets for production)
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# CORS
CORS_ORIGIN=http://localhost:3001
